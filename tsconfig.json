{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "declaration": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2020",
    "sourceMap": true,
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "allowJs": true,
    "lib": [
      "DOM",
      "ESNext",
    ],
    "types": [
      "node",
      "vitest/globals"
    ],
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
  ]
}